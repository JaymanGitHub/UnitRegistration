@model Assignment1.Models.Teaching

@{
    ViewBag.Title = "Edit";
}
<br />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Change file name </legend>

        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.DOC)
        @Html.HiddenFor(model => model.Guid)
        @Html.HiddenFor(model => model.Username)
        <div class="editor-label">
            <p style="font-size:1.2em"><b>New name</b> </p>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.RealName)
            @Html.ValidationMessageFor(model => model.RealName)
        </div>
        <br />
        <br />

        <div>
            <p><b>Detail</b></p>
            <p>
                File name: @Html.DisplayFor(model => model.RealName) <br />
                Date uploaded: @Html.DisplayFor(model => model.DOC)<br />
                
            </p>
        </div>
        <br /><br />
        <p>
            <input type="submit" value="Submit" class="btn btn-info" />
        </p>
    </fieldset>

}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
