@model IEnumerable<Assignment1.Models.Forum>
@{
    ViewBag.Title = "Forum";
}
<br>
<input type="button" class="btn btn-info" value="Create topic" onclick="location.href='@Url.Action("Create", "Forum")'" />

<div class="teachingDiv2" style="height:350px;">
    <table class=" table">

        <tr>
            <th style="width:100px">
                Username
            </th>
            <th style="width:150px">
                @Html.DisplayNameFor(model => model.Topic)
            </th>
            <th style="width:400px; overflow:hidden">
                @Html.DisplayNameFor(model => model.Comment)
            </th>
            <th style="width:200px">
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th style="width:100px">Delete</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Topic)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCreated)
                </td>
                @if (User.IsInRole("Lecturer"))
                { 
                <td>                      
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { onclick = "return confirm('Are you sure you want to delete this comment?')" })
                </td>
                }
            </tr>
        }
    </table>
</div>
